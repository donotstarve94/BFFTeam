<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light">

        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="YourDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/btn_yellow_normal</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/btn_yellow_normal</item>
    </style>
    <style name="NewDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/btn_yellow_normal</item>
    </style>
    <style name="MyTheme" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:textColorPrimary">@color/btn_yellow_normal</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">#00ffffff</item>
        <item name="android:bottomDark">#00ffffff</item>
        <item name="android:bottomMedium">#00ffffff</item>
        <item name="android:centerBright">#00ffffff</item>
        <item name="android:centerDark">#00ffffff</item>
        <item name="android:centerMedium">#00ffffff</item>
        <item name="android:fullBright">#00ffffff</item>
        <item name="android:fullDark">#00ffffff</item>
        <item name="android:topBright">#00ffffff</item>
        <item name="android:topDark">#00ffffff</item>
    </style>
</resources>
