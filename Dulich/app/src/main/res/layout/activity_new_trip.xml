<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.gnud.dulich.NewTrip">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9">
        <TextView
            android:id="@+id/txtNoibanden"
            android:background="@color/bacbac"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:text="Nơi bạn đến"
            android:textStyle="bold"
            android:paddingLeft="15dp"/>
        <AutoCompleteTextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:hint="Bấm vào đây để chọn địa điểm"
            android:textStyle="italic"
            android:textSize="18sp"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:imeOptions="actionDone"
            android:background="@android:color/transparent"
            android:paddingLeft="15dp"/>
        <TextView
            android:textStyle="bold"
            android:id="@+id/txtNgayDi"
            android:background="@color/bacbac"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Ngày khởi hành"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/edtDate"
            android:layout_width="match_parent"
            android:hint="Bấm vào đây để chọn ngày"
            android:textStyle="italic"
            android:textSize="18sp"
            android:lines="1"
            android:focusableInTouchMode="false"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:id="@+id/linearSongayolai"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/bacbac"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:textStyle="bold"
                android:id="@+id/txtSoNgayOLai"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Số ngày ở lại"
                android:paddingLeft="15dp"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/txtsoNgaySeekbar"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:text="ngay"
                android:textAlignment="center"
                />
            <TextView
                android:textStyle="bold"
                android:layout_marginRight="50dip"
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:gravity="center"
                android:text="Ngày"/>
        </LinearLayout>

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dsb_indicatorColor="@color/colorPrimary"
            app:dsb_rippleColor="@color/colorPrimary"
            app:dsb_progressColor="@color/colorPrimary"
            app:dsb_trackColor="@color/btn_yellow_normal"
            app:dsb_trackHeight="6dip"
            app:dsb_scrubberHeight="7dp"
            app:dsb_min="1"
            app:dsb_max="30"
            app:dsb_value="15"
            />

        <TextView
            android:background="@color/bacbac"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Chuyến đi"
            android:textStyle="bold"
            android:paddingLeft="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2">
            <LinearLayout
                android:id="@+id/linearlayoutCongtac"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgCongtac"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:src="@drawable/sel_act_business"/>
                <TextView
                    android:id="@+id/txtCongtac"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Công tác"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearlayoutGiaitri"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgGiaitri"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:src="@drawable/sel_act_leisure"/>
                <TextView
                    android:id="@+id/txtGiaitri"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Giải trí"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/linearChonHoatDong"
            android:background="@drawable/sel_yellow_btn_bg">
            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:text="Chọn hoạt động"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
